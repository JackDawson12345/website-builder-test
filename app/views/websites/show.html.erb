<% content_for :title, "Showing website" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing website</h1>

  <%= render @website %>

  <!-- Website Status Section -->
  <div class="mt-6 p-4 rounded-lg <%= @website.published? ? 'bg-green-50' : 'bg-yellow-50' %>">
    <div class="flex items-center space-x-3">
      <div class="flex-shrink-0">
        <% if @website.published? %>
          <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
        <% else %>
          <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
        <% end %>
      </div>

      <div class="flex-1">
        <% if @website.published? %>
          <h3 class="text-lg font-medium text-green-800">Website is Published</h3>
          <p class="text-sm text-green-700">
            Your website is live and accessible at:
            <strong><%= link_to "http://#{@website.slug}.localhost:3000", "http://#{@website.slug}.localhost:3000",
                                target: "_blank",
                                class: "underline hover:no-underline" %></strong>
          </p>
        <% else %>
          <h3 class="text-lg font-medium text-yellow-800">Website is in Draft Mode</h3>
          <p class="text-sm text-yellow-700">
            Your website is private and only visible to you.
            <%= link_to "Edit website settings", edit_website_path(@website), class: "underline hover:no-underline" %>
            to publish it.
          </p>
        <% end %>
      </div>

      <div class="flex-shrink-0">
        <% if @website.published? %>
          <%= link_to "View Live Site", "http://#{@website.slug}.localhost:3000",
                      target: "_blank",
                      class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
        <% else %>
          <%= link_to "Preview Site", preview_website_path(@website),
                      class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Pages Management Section -->
  <% if @website.content.is_a?(Hash) && @website.content['pages'].is_a?(Array) && @website.content['pages'].any? %>
    <div class="mt-8 p-6 bg-gray-50 rounded-lg">
      <h3 class="text-lg font-semibold mb-4">Website Pages</h3>

      <div class="space-y-3">
        <%
          # Sort pages by position for display
          sorted_pages = @website.content['pages'].sort_by { |page| (page['position'] || 999).to_i }
          sorted_pages.each_with_index do |page, display_index|
        %>
          <div class="flex items-center justify-between p-4 bg-white rounded-md border border-gray-200">
            <div class="flex-1">
              <div class="flex items-center space-x-4">
                <div class="flex items-center justify-center w-8 h-8 bg-blue-100 text-blue-800 rounded-full text-sm font-medium">
                  <%= page['position'] || (display_index + 1) %>
                </div>

                <div class="flex-1">
                  <h4 class="font-medium text-gray-900"><%= page['Name'] %></h4>
                  <p class="text-sm text-gray-500">
                    URL: <code class="bg-gray-100 px-1 rounded">http://<%= @website.slug %>.localhost:3000<%= page['Slug'] %></code>
                  </p>
                  <p class="text-xs text-gray-400 mt-1">
                    Menu position: <%= page['position'] || 'Not set' %>
                  </p>
                </div>

                <div class="text-sm text-gray-600">
                  <% content_length = page['content'].to_s.length %>
                  <% if content_length > 0 %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <%= content_length %> characters
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      No content
                    </span>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="flex items-center space-x-2 ml-4">
              <% if @website.published? %>
                <%= link_to "View Live", "http://#{@website.slug}.localhost:3000#{page['Slug']}",
                            target: "_blank",
                            class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200" %>
              <% else %>
                <%= link_to "Preview", preview_page_website_path(@website, page_slug: page['Slug'].sub(/^\//, '').presence || 'home'),
                            class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200" %>
              <% end %>

              <%= link_to "Edit Content", edit_page_website_path(@website, page_slug: page['Slug'].sub(/^\//, '').presence || 'home'),
                          class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-4 pt-4 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Need to add, remove, or reorder pages?</p>
            <p class="text-xs text-gray-500">The numbers on the left show the menu order. Lower numbers appear first.</p>
          </div>
          <%= link_to "Manage Page Structure", edit_website_path(@website),
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="mt-8 p-6 bg-yellow-50 rounded-lg">
      <h3 class="text-lg font-semibold mb-2 text-yellow-800">No Pages Found</h3>
      <p class="text-yellow-700 mb-4">Your website doesn't have any pages yet. Add some pages to get started!</p>
      <%= link_to "Add Pages", edit_website_path(@website),
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700" %>
    </div>
  <% end %>

  <!-- Action Buttons -->
  <div class="mt-6 flex flex-wrap gap-2">
    <%= link_to "Edit Website Structure", edit_website_path(@website),
                class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to "Back to websites", websites_path,
                class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= button_to "Destroy this website", @website, method: :delete,
                  form_class: "sm:inline-block",
                  class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer",
                  data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>